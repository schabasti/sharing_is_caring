<div class="container">
  <h1> Create a new car <%= image_tag("https://icon-library.com/images/car-icon-front/car-icon-front-15.jpg", width: "50", height: "40")  %> </h1>
  <div class="input-form">
    <%= simple_form_for(@car) do |f| %>
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :seats %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="display=flex text-center">
    <%= link_to "See all cars", cars_path, class: "btn btn-secondary"%>
  </div>
</div>
