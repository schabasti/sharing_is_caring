<div class="container">
  <div class="card-product">
    <%= cl_image_tag @car.photo.key %>
    <div class="@card-product-infos">
      <h2><%= @car.model %></h2>
      <p><%= @car.description %></p>
      <p>seats:<%= @car.seats %></p>
    </div>
    <div class="rent-button">
    </div>
  </div>

  <%= link_to "Rent this car", new_car_renting_path(@car), class: "btn btn-danger"%>

  <div class="display=flex text-center">
    <%= link_to "See all cars", cars_path, class: "btn btn-secondary"%>
    <%= link_to "Back to Homepage", root_path, class: "btn btn-secondary"%>
  </div>
</div>
